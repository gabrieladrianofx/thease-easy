#adicionado caminho via herd dentro do script para nao adicionar o php no path do windows
PHP="/c/Users/GALK TECH/.config/herd/bin/php83/php.exe"

# Rodar o PHPStan
"$PHP" ./vendor/bin/phpstan
if [ $? -ne 0 ]; then
    echo "Opa! Deu ruim aqui com PHPSTAN. Arrume antes de continuar... ðŸ˜‰"
    exit 1
fi

# Rodar os testes
"$PHP" artisan test --parallel
if [ $? -ne 0 ]; then
    echo "Opa! Deu ruim aqui com algum teste. Arrume antes de continuar... ðŸ˜‰"
    exit 1
fi

# Formatar cada arquivo alterado usando o Laravel Pint
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "\.php$") || true

for FILE in $STAGED_FILES; do
    "$PHP" ./vendor/bin/pint "$FILE" > /dev/null 2>&1
    git add "$FILE"
done

exit 0
